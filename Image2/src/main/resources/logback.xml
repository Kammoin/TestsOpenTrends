<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- LOC -->
	<springProfile name="loc">
	
		<property name="LOGS" value="./logs" />
		
		<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
			<layout class="ch.qos.logback.classic.PatternLayout">
				<Pattern>
					%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %X{request_id} - %msg%n
				</Pattern>
			</layout>
		</appender>

		<appender name="RollingFile"
			class="ch.qos.logback.core.rolling.RollingFileAppender">
			<file>${LOGS}/continuousIntService.log</file>
			<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} %X{request_id}%5p %logger{36} - %X{request_id} - %msg%n</Pattern>
			</encoder>

			<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
				<!-- rollover daily and when the file reaches 10 MegaBytes -->
				<fileNamePattern>${LOGS}/archived/continuousIntService-%d{yyyy-MM-dd}.%i.log
				</fileNamePattern>
				<timeBasedFileNamingAndTriggeringPolicy
					class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
					<maxFileSize>5MB</maxFileSize>
				</timeBasedFileNamingAndTriggeringPolicy>
			</rollingPolicy>
		</appender>
		
		<!-- LOG everything at ERROR level -->
		<root level="error">
			<appender-ref ref="RollingFile" />
			<appender-ref ref="Console" />
		</root>
		
	
		<!-- LOG "com.opentrends*" at DEBUG level -->
		<logger name="com.opentrends" level="debug" additivity="false">
			<appender-ref ref="RollingFile" />
			<appender-ref ref="Console" />
		</logger>
	
	</springProfile>
	
	<!-- PRE (Not defined to simplify)-->
	<!-- PRO (Not defined to simplify)-->

</configuration>